<div class="table-responsive my-5">
  <% if (message) { %>
  <div class="alert alert-danger"><%= message %></div>
  <% } %> <% if (teams && teams.length > 0) { %>
  <!-- Check if teams exist and have entries -->
  <table id="usersTable" class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>Image</th>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% teams.forEach((team, index) => { %>
      <tr>
        <td><%= ++index %></td>
        <td>
          <img
            src="<%= team.image %>"
            alt="<%= team.teamName %>"
            style="width: 50px; height: auto"
          />
        </td>
        <td><%= team.id %></td>
        <td><%= team.teamName %></td>
        <td><%= team.email %></td>
        <td>
          <a href="/teams/<%= team.id %>/edit" class="btn btn-sm btn-primary"
            >Edit</a
          >
          <a href="/teams/<%= team.id %>/delete" class="btn btn-sm btn-danger"
            >Delete</a
          >
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } else { %>
  <!-- If no teams are found, show a message -->
  <div class="alert alert-info">No teams available.</div>
  <% } %>
</div>
